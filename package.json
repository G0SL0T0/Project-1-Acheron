{
  "name": "streaming-platform",
  "version": "1.0.0",
  "description": "Платформа для потоковой трансляции с чатом, донатами и мини-играми",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:client\" \"pnpm dev:server\"",
    "dev:client": "cd apps/client && pnpm dev",
    "dev:server": "cd apps/server && pnpm start:dev",
    "build": "pnpm build:client && pnpm build:server",
    "build:client": "cd apps/client && pnpm build",
    "build:server": "cd apps/server && pnpm build",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "test": "pnpm -r test",
    "docker:dev": "docker-compose -f docker-compose.yml up -d",
    "docker:clean": "docker-compose down -v",
    "setup": "pnpm install && pnpm docker:dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}